<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/background_card"
    android:orientation="vertical"
    android:padding="3dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.jjjx.widget.SquareImageView
            android:id="@+id/ifh_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/app_gray_color" />

        <ImageView
            android:id="@+id/find_video_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ico_bo" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="7dp">

        <com.jjjx.widget.CircleImageView
            android:id="@+id/ifh_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ico_head" />

        <TextView
            android:id="@+id/ifh_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/ifh_head"
            android:ellipsize="end"
            android:maxLength="10"
            android:text="name"
            android:textColor="@color/color_gray_text"
            android:textSize="10sp" />


        <TextView
            android:id="@+id/find_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:text="100"
            android:textColor="@color/color_gray_text"
            android:textSize="10sp"
            android:visibility="gone" />

        <com.jjjx.widget.like.LikeButton
            android:id="@+id/find_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/find_number"
            android:visibility="gone"
            app:anim_scale_factor="3"
            app:icon_size="16dp"
            app:icon_type="heart" />


    </RelativeLayout>
</LinearLayout>
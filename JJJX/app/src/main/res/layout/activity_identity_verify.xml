<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/aiv_ctl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/transparent"
        app:tl_iconVisible="false"
        app:tl_indicator_color="@color/app_main_color"
        app:tl_indicator_corner_radius="1.5dp"
        app:tl_indicator_height="3dp"
        app:tl_indicator_width="100dp"
        app:tl_textSelectColor="@color/color_normal_text"
        app:tl_textUnselectColor="@color/color_normal_text"
        app:tl_textsize="14sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/aiv_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f3"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/theme_color"
        android:gravity="center"
        android:orientation="vertical">

        <com.jjjx.widget.CircleImageView
            android:id="@+id/fm_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/login_bg"
            app:civ_border_color="#999"
            app:civ_border_width="2dp" />

    </LinearLayout>

    <include layout="@layout/rce_item_divider_20" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/profile_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.jjjx.widget.ListItemTextView
                android:id="@+id/profile_name_p"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:tv_list_item_title="姓名" />

            <View style="@style/rce_horizontal_light_thin_divider" />


            <com.jjjx.widget.ListItemTextView
                android:id="@+id/profile_sex_p"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:tv_list_item_allow_arrow="true"
                app:tv_list_item_title="性别" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/profile_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.jjjx.widget.ListItemTextView
                android:id="@+id/profile_name_t"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:tv_list_item_title="姓名" />

            <View style="@style/rce_horizontal_light_thin_divider" />


            <com.jjjx.widget.ListItemTextView
                android:id="@+id/profile_sex_t"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:tv_list_item_allow_arrow="true"
                app:tv_list_item_title="性别" />

            <View style="@style/rce_horizontal_light_thin_divider" />


            <com.jjjx.widget.ListItemTextView
                android:id="@+id/profile_learn_year_t"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:tv_list_item_allow_arrow="true"
                app:tv_list_item_title="教龄" />

            <View style="@style/rce_horizontal_light_thin_divider" />

            <com.jjjx.widget.ListItemTextView
                android:id="@+id/profile_job_t"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:tv_list_item_allow_arrow="true"
                app:tv_list_item_title="职业" />

            <View style="@style/rce_horizontal_light_thin_divider" />


            <com.jjjx.widget.ListItemTextView
                android:id="@+id/profile_main_class_t"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:tv_list_item_allow_arrow="true"
                app:tv_list_item_title="主要课程" />

            <include layout="@layout/rce_item_divider_20" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/profile_organization"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.jjjx.widget.ListItemTextView
                android:id="@+id/profile_name_o"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:tv_list_item_title="机构名" />

            <View style="@style/rce_horizontal_light_thin_divider" />


            <com.jjjx.widget.ListItemTextView
                android:id="@+id/profile_learn_year_o"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:tv_list_item_allow_arrow="true"
                app:tv_list_item_title="办学时长" />

            <View style="@style/rce_horizontal_light_thin_divider" />

            <com.jjjx.widget.ListItemTextView
                android:id="@+id/profile_teacher_amount_o"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:tv_list_item_allow_arrow="true"
                app:tv_list_item_title="教师人数" />

            <View style="@style/rce_horizontal_light_thin_divider" />

            <com.jjjx.widget.ListItemTextView
                android:id="@+id/profile_average_age_o"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:tv_list_item_allow_arrow="true"
                app:tv_list_item_title="平均教龄" />

            <View style="@style/rce_horizontal_light_thin_divider" />


            <com.jjjx.widget.ListItemTextView
                android:id="@+id/profile_main_class_o"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:tv_list_item_allow_arrow="true"
                app:tv_list_item_title="主要课程" />

            <include layout="@layout/rce_item_divider_20" />

        </LinearLayout>

    </FrameLayout>


</LinearLayout>
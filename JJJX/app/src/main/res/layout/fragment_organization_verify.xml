<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/linearlayout_horizontal_0_5_divider_shape"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="机构名称"
            android:textColor="@color/app_txt_black_0"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/fov_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:background="@null"
            android:gravity="right"
            android:hint="请输入"
            android:maxLines="2"
            android:maxLength="20"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:textColor="@color/app_txt_black_8"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="教学内容"
            android:textColor="@color/app_txt_black_0"
            android:textSize="14sp" />


        <EditText
            android:id="@+id/fov_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:background="@null"
            android:gravity="right"
            android:hint="请使用“、”分割"
            android:paddingBottom="15dp"
            android:maxLines="4"
            android:maxLength="100"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:textColor="@color/app_txt_black_8"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fov_city_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在城市"
            android:textColor="@color/app_txt_black_0"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/fov_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="right"
            android:hint="请选择"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:textColor="@color/app_txt_black_8"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="20dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ico_right_jiantou" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请上传相关证书"
            android:textColor="@color/app_txt_black_0"
            android:textSize="14sp" />

        <com.jjjx.widget.MediaGridView
            android:id="@+id/fov_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:listSelector="@android:color/transparent"
            android:numColumns="4" />

    </LinearLayout>

</LinearLayout>
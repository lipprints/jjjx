<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/linearlayout_horizontal_0_5_divider_shape"
    android:showDividers="middle"
    android:orientation="vertical">

    <LinearLayout style="@style/AppTitleBarSubStyle">


        <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/ff_stl"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:background="@color/transparent"
            app:tl_iconVisible="false"
            app:tl_indicator_corner_radius="1.5dp"
            app:tl_indicator_height="5dp"
            app:tl_textSelectColor="@color/color_normal_text"
            app:tl_textUnselectColor="@color/color_normal_text"
            app:tl_indicator_color="@color/app_main_color"

            app:tl_textsize="14sp" />


        <TextView
            android:id="@+id/jx_find_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/find_add_shape"
            android:paddingBottom="4dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="4dp"
            android:text="发布"
            android:textColor="@color/app_txt_black_0"
            android:textSize="12sp" />
    </LinearLayout>

    <!--app:tl_indicator_width_equal_title="true"-->
    <!--app:tl_tab_space_equal="true"-->

    <android.support.v4.view.ViewPager
        android:id="@+id/ff_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
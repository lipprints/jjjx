<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/tools"
    android:id="@+id/main_show"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:divider="@drawable/linearlayout_horizontal_0_5_divider_shape"
    android:orientation="vertical"
    android:showDividers="middle">

    <com.jjjx.widget.JxViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:id="@+id/ahm_rg"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:clipChildren="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <RadioButton
            android:id="@+id/tab_home"
            style="@style/BottomBut"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/tab_home_selector"
            android:text="首页" />

        <RadioButton
            android:id="@+id/tab_find"
            style="@style/BottomBut"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/tab_find_selector"
            android:text="发现" />

        <LinearLayout
            android:id="@+id/am_add"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/am_add_ico"
                android:layout_width="50dp"
                android:layout_height="53dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="发布"
                android:textColor="@color/app_txt_black_0"
                android:textSize="9sp" />
        </LinearLayout>


        <RadioButton
            android:id="@+id/tab_message"
            style="@style/BottomBut"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/tab_message_selector"
            android:text="消息" />

        <RadioButton
            android:id="@+id/tab_my"
            style="@style/BottomBut"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/tab_my_selector"
            android:text="我的" />

    </RadioGroup>
</LinearLayout>

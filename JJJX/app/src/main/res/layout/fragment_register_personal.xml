<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:divider="@drawable/linearlayout_horizontal_0_5_divider_shape"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:showDividers="middle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="用户名"
            android:textColor="@color/app_txt_black_0"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/frp_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:lines="1"
            android:maxLength="15"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingTop="15dp"
            android:textColor="@color/app_txt_black_0"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/aup_code"
            android:textColor="@color/app_txt_black_0"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/frp_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:lines="1"
                android:maxLength="10"
                android:paddingBottom="15dp"
                android:paddingLeft="7dp"
                android:paddingTop="15dp"
                android:textColor="@color/app_txt_black_0"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/frp_send_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/find_add_shape"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="获取验证码"
                android:textColor="@color/app_txt_black_0"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="密码"
            android:textColor="@color/app_txt_black_0"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/frp_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="20"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingTop="15dp"
            android:textColor="@color/app_txt_black_0"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/aup_new_phone_again"
            android:textColor="@color/app_txt_black_0"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/frp_password_again"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@null"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:lines="1"
            android:maxLength="20"
            android:paddingBottom="15dp"
            android:paddingLeft="7dp"
            android:paddingTop="15dp"
            android:textColor="@color/app_txt_black_0"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/frp_select_agreement"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/login_check_selector"
                android:button="@null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本人已阅读并同意"
                android:layout_marginLeft="10dp"
                android:textColor="@color/app_txt_black_8"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/frp_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《注册协议》"
                android:textColor="#FB7954"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/frp_submit"
            style="@style/SubmitButtonStyle.8R"
            android:layout_marginTop="12dp"
            android:text="确认" />
    </LinearLayout>
</LinearLayout>
